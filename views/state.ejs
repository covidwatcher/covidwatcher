<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="./CSS/styles.css">
</head>
<body>
  <fieldset>
    <h4>Search by abbreviated state name</h4>
      <form action="/state" id="stateCode">
        <input type="text" name="state" placeholder="Enter a state abbreviation" required>
        <input type="submit" value="Submit"/><br>
  </fieldset>
  
  
  
  <h2>Save a state for easy look up</h2>
  <div id="state-container">
    <% states.forEach(state => { %>
    <div class="state-card">
      <h2><%= state.stateName %></h2>
      <p><%= state.positive %></p>
      <p><%= state.negative %></p>
      <p><%= state.hospitalizedCurrently %></p>
      <p><%= state.recovered %></p>
      <p><%= state.death %></p>
      <p><%= state.totalTest %></p>
      <p><%= state.positiveTests %></p>
      <p><%= state.negativeTests %></p>
      <button type="button">View Details</button>
      <% }) %>
    </div>
  </div>
</body>
</html>